<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', { pageTitle: 'Settings' }) %>
</head>
<body>
    <%- include('../partials/sidebar', { activePage: 'settings' }) %>
    <main class="main-content">
        <%- include('../partials/header') %>

        <section class="settings-page">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-cogs"></i>
                    <h2>Application Settings</h2>
                </div>
                <div class="card-content">
                    <div class="settings-list">
                        <!-- Theme Setting -->
                        <div class="setting-item">
                            <div class="setting-label">
                                <h3>Theme</h3>
                                <p>Choose between light and dark mode.</p>
                            </div>
                            <div class="setting-control">
                                <label class="switch">
                                    <input type="checkbox" id="darkModeToggle">
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>
                        <!-- Temperature Unit Setting -->
                        <div class="setting-item">
                            <div class="setting-label">
                                <h3>Temperature Unit</h3>
                                <p>Select Celsius or Fahrenheit for temperature display.</p>
                            </div>
                            <div class="setting-control">
                                <label class="switch">
                                    <input type="checkbox" id="temperatureUnitToggle">
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>
                        <!-- Update Interval Setting -->
                        <div class="setting-item">
                            <div class="setting-label">
                                <h3>Update Interval</h3>
                                <p>Set how often the data refreshes.</p>
                            </div>
                            <div class="setting-control">
                                <div class="button-group">
                                    <button class="btn-group-item" data-interval="1000">1s</button>
                                    <button class="btn-group-item" data-interval="2000">2s</button>
                                    <button class="btn-group-item" data-interval="5000">5s</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>
    </main>

    <script src="/js/utils.js"></script>
    <script src="/js/socket.js"></script>
    <script src="/js/charts.js"></script>
    <script src="/js/ui.js"></script>
    <script src="/js/settings.js"></script>
</body>
</html> 