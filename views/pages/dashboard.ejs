<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', { pageTitle: 'Dashboard' }) %>
</head>
<body>
    <%- include('../partials/sidebar', { activePage: 'dashboard' }) %>
    <main class="main-content dashboard-grid">
        <%- include('../partials/header') %>

        <section class="dashboard-summary-section">
            <div class="dashboard-summary-grid">
                <div class="dashboard-summary-cards">
                    <div class="card summary-card cpu-summary">
                        <div class="card-label-row">
                            <span class="card-icon"><i class="fas fa-microchip"></i></span>
                            <span class="card-label">CPU Usage</span>
                        </div>
                        <div class="card-data-center">
                            <h2 class="summary-value" id="summaryCpuUsage">--%</h2>
                        </div>
                    </div>
                    <div class="card summary-card memory-summary">
                        <div class="card-label-row">
                            <span class="card-icon"><i class="fas fa-memory"></i></span>
                            <span class="card-label">Memory Used</span>
                        </div>
                        <div class="card-data-center">
                            <h2 class="summary-value" id="summaryMemoryUsed">--GB</h2>
                        </div>
                    </div>
                    <div class="card summary-card disk-summary">
                        <div class="card-label-row">
                            <span class="card-icon"><i class="fas fa-hdd"></i></span>
                            <span class="card-label">Disk Free</span>
                        </div>
                        <div class="card-data-center">
                            <h2 class="summary-value" id="summaryDiskFree">-- GB</h2>
                        </div>
                    </div>
                </div>
                <div class="card network-usage-card">
                    <div class="card-header">
                        <i class="fas fa-network-wired"></i>
                        <h2>Network Usage</h2>
                    </div>
                    <div class="card-content network-content">
                        <canvas id="networkChart"></canvas>
                        <div class="network-stats">
                            <div class="network-row">
                                <span>Upload</span>
                                <span id="networkUploadSpeed">-- Mb/s</span>
                                <span>Total Up</span>
                                <span id="networkTotalUpload">-- GB</span>
                            </div>
                            <div class="network-row">
                                <span>Download</span>
                                <span id="networkDownloadSpeed">-- Mb/s</span>
                                <span>Total Down</span>
                                <span id="networkTotalDownload">-- GB</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>
    </main>

    <script src="/js/utils.js"></script>
    <script src="/js/socket.js"></script>
    <script src="/js/charts.js"></script>
    <script src="/js/ui.js"></script>
</body>
</html> 