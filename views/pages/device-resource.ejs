<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', { pageTitle: 'Device Resource' }) %>
</head>
<body>
    <%- include('../partials/sidebar', { activePage: 'device-resource' }) %>
    <main class="main-content">
        <%- include('../partials/header') %>

        <section class="resource-details-grid">
            <!-- System Info Card -->
            <div class="card system-info-card">
                <div class="card-header">
                    <i class="fas fa-info-circle"></i>
                    <h2>System Information</h2>
                </div>
                <div class="card-details" id="systemInfoDetails">
                    <!-- JS will populate this -->
                </div>
            </div>

            <!-- CPU Card -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-microchip"></i>
                    <h2>CPU</h2>
                </div>
                <div class="card-content with-progress">
                    <div class="progress-container">
                        <div id="cpuProgressBar" class="progress-bar"></div>
                        <span id="cpuProgressText" class="progress-text">--%</span>
                    </div>
                    <div class="card-data-row">
                        <span class="data-label">Current Usage</span>
                        <span id="cpuUsedValue" class="data-value">--% used</span>
                    </div>
                </div>
                <div class="card-details" id="cpuDetails">
                    <!-- JS will populate this -->
                </div>
            </div>
            
            <!-- Memory Card -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-memory"></i>
                    <h2>Memory</h2>
                </div>
                <div class="card-content with-progress">
                    <div class="progress-container">
                        <div id="memoryProgressBar" class="progress-bar"></div>
                        <span id="memoryProgressText" class="progress-text">--%</span>
                    </div>
                     <div class="card-data-row">
                        <span class="data-label">RAM Usage</span>
                        <span id="memoryUsedValue" class="data-value">--% used</span>
                    </div>
                </div>
                <div class="card-details" id="memoryDetails">
                    <!-- JS will populate this -->
                </div>
            </div>
            
            <!-- Swap Memory Card -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-hdd"></i>
                    <h2>Swap Memory</h2>
                </div>
                 <div class="card-content with-progress">
                    <div class="progress-container">
                        <div id="swapMemoryProgressBar" class="progress-bar"></div>
                        <span id="swapMemoryProgressText" class="progress-text">--%</span>
                    </div>
                     <div class="card-data-row">
                        <span class="data-label">Swap Usage</span>
                        <span id="swapMemoryUsedValue" class="data-value">--% used</span>
                    </div>
                </div>
                <div class="card-details" id="swapMemoryDetails">
                     <!-- JS will populate this -->
                </div>
            </div>
            
            <!-- Disk Usage Card -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-database"></i>
                    <h2>Disk Usage</h2>
                </div>
                 <div class="card-content with-progress">
                    <div class="progress-container">
                        <div id="diskProgressBar" class="progress-bar"></div>
                        <span id="diskProgressText" class="progress-text">--%</span>
                    </div>
                    <div class="card-data-row">
                        <span class="data-label">Disk Usage</span>
                        <span id="diskUsedValue" class="data-value">--% used</span>
                    </div>
                </div>
                <div class="card-details" id="diskDetails">
                     <!-- JS will populate this -->
                </div>
            </div>

            <!-- Temperature Card -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-thermometer-half"></i>
                    <h2>Temperature</h2>
                </div>
                <div class="card-content">
                    <div class="card-data-row temperature-main">
                        <span id="temperatureValue" class="data-value">-- &deg;C</span>
                    </div>
                    <div class="temperature-unit-toggle">
                        <span>&deg;C</span>
                        <label class="switch">
                            <input type="checkbox" id="temperatureUnitToggle">
                            <span class="slider round"></span>
                        </label>
                        <span>&deg;F</span>
                    </div>
                </div>
                <div class="card-details" id="temperatureDetails">
                    <!-- JS will populate this -->
                </div>
            </div>

        </section>
        
        <%- include('../partials/footer') %>
    </main>

    <script src="/js/utils.js"></script>
    <script src="/js/socket.js"></script>
    <script src="/js/charts.js"></script>
    <script src="/js/ui.js"></script>
</body>
</html> 